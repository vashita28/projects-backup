<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/service_checklist_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_numbers"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_movement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/editText_bg_text_color"
                android:gravity="left"
                android:hint="@string/NOT_MEASURED"
                android:inputType="textNoSuggestions|textFilter|none"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="@dimen/normal_text_size" />

            <View
                android:layout_width="328dp"
                android:layout_height="7dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/below_line_2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>

</LinearLayout>