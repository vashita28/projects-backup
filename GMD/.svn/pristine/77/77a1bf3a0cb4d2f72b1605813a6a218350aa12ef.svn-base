<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/desc_of_service_performed_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="@string/DESCRIPTION_OF_SERVICE_PERFORMED"
        android:textColor="@color/textview_text_color"
        android:textSize="@dimen/bold_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/plain_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stator_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.6"
            android:gravity="left"
            android:text="@string/STATOR"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/stator_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.4"
            android:background="@color/editText_bg_text_color"
            android:hint="@string/ENTER_TEXT_HERE"
            android:inputType="textNoSuggestions|textFilter|none"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/rotor_poles_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.6"
            android:gravity="left"
            android:text="@string/ROTOR_POLES"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/rotor_poles_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.4"
            android:background="@color/editText_bg_text_color"
            android:hint="@string/ENTER_TEXT_HERE"
            android:inputType="textNoSuggestions|textFilter|none"
            android:keepScreenOn="false"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/motor_aux_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0.6"
            android:gravity="left"
            android:text="@string/MOTOR_AUXILLARIES"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/motor_aux_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.4"
            android:background="@color/editText_bg_text_color"
            android:hint="@string/ENTER_TEXT_HERE"
            android:inputType="textNoSuggestions|textFilter|none"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- <TextView -->
        <!-- android:id="@+id/cyclo_converter_textview" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="100dp" -->
        <!-- android:layout_marginTop="12dp" -->
        <!-- android:layout_weight="0.7" -->
        <!-- android:gravity="left" -->
        <!-- android:text="@string/CYCLO_CONVERTER" -->
        <!-- android:textColor="@color/textview_text_color" -->
        <!-- android:textSize="@dimen/normal_text_size" /> -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="70dp"
            android:layout_weight="0.6" >

            <Spinner
                android:id="@+id/spinner_cyclo_convertor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/editText_bg_text_color"
                android:clickable="true"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_dropdown" />
        </RelativeLayout>

        <EditText
            android:id="@+id/cyclo_converter_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.4"
            android:background="@color/editText_bg_text_color"
            android:hint="@string/ENTER_TEXT_HERE"
            android:inputType="textNoSuggestions|textFilter|none"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/textview_text_color"
            android:textSize="@dimen/normal_text_size" 
            android:enabled="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/list_of_distribution_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:gravity="left"
        android:text="@string/LIST_OF_DISTRIBUTION"
        android:textColor="@color/textview_text_color"
        android:textSize="@dimen/bold_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/plain_line" />

    <LinearLayout
        android:id="@+id/ll_list_of_distribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_service_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/ADD_NEW_ITEM"
        android:textColor="@color/textview_text_color"
        android:textSize="@dimen/button_text_size" />

    <TextView
        android:id="@+id/distribution_to_customer_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="@string/DISTRIBUTION_TO_CUSTOMER"
        android:textColor="@color/textview_text_color"
        android:textSize="@dimen/bold_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/plain_line" />

    <LinearLayout
        android:id="@+id/ll_distribution_to_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_desc_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/ADD_NEW_ITEM"
        android:textColor="@color/textview_text_color"
        android:textSize="@dimen/button_text_size" />

</LinearLayout>