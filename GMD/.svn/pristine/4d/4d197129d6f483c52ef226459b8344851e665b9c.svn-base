<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_row_site_storage_conditions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/store_cleanliness_edittext"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="@string/STORE_CLEANLINESS"
                android:inputType="textNoSuggestions|textFilter|none"
                android:lines="1"
                android:nextFocusDown="@+id/remarks_edittext"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="22sp" />

            <View
                android:layout_width="295dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="1.5dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" >

                <Spinner
                    android:id="@+id/checked_spinner"
                    android:layout_alignParentLeft="true"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/editText_bg_text_color"
                    android:entries="@array/site_storage_conditions_checked"
                    android:spinnerMode="dialog"
                    android:textColor="@color/textview_text_color"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/spinner_dropdown"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="163dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/date_edittext"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="@string/DATE"
                android:inputType="textNoSuggestions|textFilter|none|date"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="22sp" />

            <View
                android:layout_width="163dp"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/remarks_edittext"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/editText_bg_text_color"
                android:hint="@string/REMARKS"
                android:inputType="textNoSuggestions|textFilter|none"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/textview_text_color"
                android:textSize="22sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="1dp"
                android:background="@drawable/below_line_2" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>