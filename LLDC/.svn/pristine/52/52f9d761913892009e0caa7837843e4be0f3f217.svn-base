<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:clickable="false"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/roundedinfowindow_selected" >

        <co.uk.android.lldc.custom.SquareImageView
            android:id="@+id/venueImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" 
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingStart="2dp"
            android:paddingRight="2dp"
            android:paddingEnd="2dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:visibility="visible"/>

        <co.uk.android.lldc.custom.CustomTextView_CarlitoBoldFont
            android:id="@+id/venueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/venueImage"
            android:layout_alignRight="@+id/venueImage"
            android:layout_alignStart="@+id/venueImage"
            android:layout_alignEnd="@+id/venueImage"
            android:layout_below="@+id/venueImage"
            android:alpha="0.9"
            android:background="@color/explorer_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="10sp"
            android:text="vsdkjgbksdjbgsd"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <co.uk.android.lldc.custom.CustomTextView_CarlitoBoldFont
            android:id="@+id/eventcount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/venueTitle"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/venueTitle"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/circularinfowindow"
            android:gravity="center"
            android:text="vs"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>