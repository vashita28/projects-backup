<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:paddingEnd="5dp"
    android:paddingLeft="0dp"
    android:paddingRight="3dp"
    android:paddingStart="0dp" >

    <ImageView
        android:id="@+id/ivParkEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/imgnt_placeholder" />

    <co.uk.android.lldc.custom.CustomTextView_calbiriBoldFont
        android:id="@+id/tvParkEventHeading"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/ivParkEvent"
        android:layout_alignLeft="@+id/ivParkEvent"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ivParkEvent"
        android:layout_alignStart="@+id/ivParkEvent"
        android:layout_marginTop="20dp"
        android:background="@color/white_transparent"
        android:ellipsize="marquee"
        android:gravity="center_vertical|left|start"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="NEWTON MARKER&apos;S DAY"
        android:textColor="@color/textcolor_pink"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>